## Runner-only settings (used by scripts/run_narration_dev.sh)
## Keep these OUT of .env to avoid Pydantic settings validation errors.

ENABLE_R2R=1
R2R_RUNTIME=docker
RESTART_R2R_ON_START=1

# Cleanup strategy for Docker R2R stack
R2R_DOCKER_STOP_ON_EXIT=1
R2R_DOCKER_DOWN_ON_START=1
R2R_DOCKER_DOWN_ON_EXIT=1
R2R_DOCKER_PRUNE_VOLUMES_ON_START=0
R2R_DOCKER_PRUNE_VOLUMES_ON_EXIT=0

# Startup behavior
R2R_STARTUP_TIMEOUT_S=120
R2R_STRICT_STARTUP=0
