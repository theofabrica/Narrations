# Application Environment
APP_ENV=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=3333

# Higgsfield API Configuration
HIGGSFIELD_API_KEY=your_higgsfield_api_key_here
HIGGSFIELD_BASE_URL=https://api.higgsfield.ai
HIGGSFIELD_TIMEOUT=300
HIGGSFIELD_RETRIES=3
HIGGSFIELD_POLLING_INTERVAL=5

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1
ELEVENLABS_TIMEOUT=300
ELEVENLABS_RETRIES=3
ELEVENLABS_POLLING_INTERVAL=5

# Writer agent (agentic loop)
WRITER_AGENTIC_ENABLED=true
WRITER_AGENTIC_MAX_ITERS=3
WRITER_AGENTIC_SCORE_THRESHOLD=0.75

# RAG runtime guards (n0 narrative diagnostics)
# HTTP timeout for R2R client calls (seconds)
R2R_CLIENT_TIMEOUT_S=90
# Multi-domain R2R routing (one DB/stack per domain)
R2R_API_BASE_NARRATIVE=http://127.0.0.1:7272
R2R_API_BASE_ART=http://127.0.0.1:7274
R2R_API_BASE_SOUND=http://127.0.0.1:7275
# Legacy fallback (kept for compatibility)
R2R_API_BASE=http://127.0.0.1:7272
# Maximum semantic variants to execute per request
RAG_VARIANT_MAX=4
# Per-target override (recommended): keep art/sound lighter than narrative
RAG_VARIANT_MAX_NARRATIVE=4
RAG_VARIANT_MAX_ART_SOUND=1
# Total time budget across all variants (seconds)
RAG_VARIANT_TOTAL_BUDGET_S=180

# Deep-agentic pass count by target family
R2R_DEEP_AGENTIC_PASSES_NARRATIVE=2
R2R_DEEP_AGENTIC_PASSES_ART_SOUND=1

